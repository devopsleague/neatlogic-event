<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="codedriver.module.event.dao.mapper.EventMapper">

	<select id="getEventIdByProcessTaskStepId" parameterType="java.lang.Long" resultType="java.lang.Long">
	SELECT 
	  `event_id` 
	FROM `processtask_step_event` 
	WHERE `processtask_step_id` = #{value}
	</select>

	<select id="getEventById" parameterType="java.lang.Long" resultType="codedriver.framework.event.dto.EventVo">
	SELECT 
	  `id`,
	  `event_type_id` AS eventTypeId,
	  `event_solution_id` AS eventsolutionId
	FROM `event` 
	WHERE `id` = #{value}
	</select>

	<update id="updateEventById" parameterType="codedriver.framework.event.dto.EventVo">
	UPDATE `event` 
	SET
	  `event_type_id` = #{eventTypeId},
	  `event_solution_id` = #{eventsolutionId} 
	WHERE `id` = #{id}
	</update>

    <insert id="insertEvent" parameterType="codedriver.framework.event.dto.EventVo">
    INSERT INTO `event` (
	  `id`,
	  `event_type_id`,
	  `event_solution_id`
	) 
	VALUES
	  (
	    #{id},
	    #{eventTypeId},
	    #{eventSolutionId}
	  )
    </insert>

    <insert id="insetProcessTaskStepEvent" parameterType="codedriver.framework.event.dto.ProcessTaskStepEventVo">
    INSERT INTO `processtask_step_event` (
	  `processtask_id`,
	  `processtask_step_id`,
	  `event_id`
	) 
	VALUES
	  (
	    #{processTaskId},
	    #{processTaskStepId},
	    #{eventId}
	  )
    </insert>
</mapper>